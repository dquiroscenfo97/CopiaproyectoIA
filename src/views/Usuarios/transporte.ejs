    <script>
    const rutas = JSON.parse(document.getElementById('rutas-data').textContent);

    const horarioCards = document.querySelectorAll('.route-usercard');
    const tarifaCards = document.querySelectorAll('.fee-usercard');

    let index = 0;

    function actualizarTarjetas() {
        for (let i = 0; i < 4; i++) {
        const ruta = rutas[(index + i) % rutas.length];

        // Horario
        const horarioCard = horarioCards[i];
        horarioCard.querySelector('.route-name').textContent = ruta.routeName;
        horarioCard.querySelector('.route-frequency').textContent = `Frecuencia: ${ruta.transportFrecuency}`;
        horarioCard.querySelector('.route-time').textContent = `Hora de salida: ${ruta.transportTime}`;

        // Tarifa
        const tarifaCard = tarifaCards[i];
        tarifaCard.querySelector('.fee-name').textContent = ruta.routeName;
        tarifaCard.querySelector('.fee-price').textContent = `Tarifa: ${ruta.transportFee}`;
        tarifaCard.querySelector('.fee-duration').textContent = `Duración estimada: ${ruta.tripDuration}`;
        }

        index = (index + 4) % rutas.length;
    }

    actualizarTarjetas(); // inicial
    setInterval(actualizarTarjetas, 15000); // cada 5 segundos
    </script>

